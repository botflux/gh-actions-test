{
    "$schema": "https://json.schemastore.org/release-it.json",
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": true,
      "requireUpstream": false
    },
    "github": {
      "release": true,
      "web": true
    },
    "npm": {
      "publish": true,
      "access": "public"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  }